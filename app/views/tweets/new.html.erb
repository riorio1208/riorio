<p class="title">投稿フォーム</p>
<h3>新規投稿</h3>

<%= form_for @tweet do |f| %>
  <div class="post-field">
  <div class="field">
    <%= f.label :投稿内容 %>
    <%= f.text_field :body, :size => 140 %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <%= f.submit "投稿する" %>
<% end %>
<%= link_to "投稿一覧に戻る", tweets_path %>
</div>
